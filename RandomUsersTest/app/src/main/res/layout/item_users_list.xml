<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.skaravatskiy.randomusers.data.model.database.User" />
    </data>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_short"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:imageUrl="@{user.picture}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/ic_launcher_background"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_full_name"
                style="@style/TextTitleLarge.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_short"
                android:text="@{user.nameFirst + ' ' + user.nameLast}"
                app:layout_constraintBottom_toBottomOf="@id/image_user_photo"
                app:layout_constraintLeft_toRightOf="@id/image_user_photo"
                app:layout_constraintTop_toTopOf="@id/image_user_photo"
                tools:text="John Snow" />

            <TextView
                android:id="@+id/text_location"
                style="@style/TextDescLittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.location}"
                app:layout_constraintLeft_toLeftOf="@id/text_full_name"
                app:layout_constraintTop_toBottomOf="@id/text_full_name"
                tools:text="Winterfall" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
